@model LoginIndexVM;

<form method="post">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <input asp-for="Email" type="email" id="form2Example1" class="form-control" />
        <label asp-for="Email" class="form-label" for="form2Example1">Email address</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        <input asp-for="Password"ntype="password" id="form2Example2" class="form-control" />
        <label asp-for="Password" class="form-label" for="form2Example2">Password</label>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox"/>
                <label asp-for="RememberMe" class="form-check-label" for="form2Example31"> @Html.DisplayNameFor(m => m.RememberMe) </label>
            </div>
        </div>

        <div class="col">
            <!-- Simple link -->
            <a href="#!">Forgot password?</a>
        </div>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

    <!-- Register buttons -->
    <div class="text-center">
        <p>Not a member? <a asp-action="Index" asp-controller="Register">Register</a></p>
        <p>or sign up with:</p>
        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-facebook-f"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-google"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-twitter"></i>
        </button>

        <button type="button" class="btn btn-link btn-floating mx-1">
            <i class="fab fa-github"></i>
        </button>
    </div>
</form>