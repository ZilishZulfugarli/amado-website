@model MiniLayihe.Models.CategoryIndexVM;
@{
    Layout = null;
}
<a asp-action="Add" asp-controller="AdminCategory" class="btn primary-btn">Add Category</a>
@foreach (var item in Model.Categories)
{
    <div class="card" style="width: 18rem; border: 1px solid black">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <a class="btn btn-warning" asp-action="Delete" asp-controller="AdminCategory" asp-route-id="@item.Id">Delete</a>
            <a class="btn btn-danger" asp-action="Update" asp-controller="AdminCategory" asp-route-id="@item.Id">Update</a>
        </div>
    </div>
}