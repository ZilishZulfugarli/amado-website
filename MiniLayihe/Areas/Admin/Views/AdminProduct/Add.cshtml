@model MiniLayihe.Models.ProductAddVM;
@{
    Layout = null;
}

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Product Name">
        <span style="color:red" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Product Price</label>
        <input asp-for="Price" type="text" asp-format="{0:N2}" step="2" class="form-control" placeholder="Product Price">
        <span style="color:red" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Add Product Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span style="color:red" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Add Product Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" rows="3"></input>
        <span style="color:red" asp-validation-for="Quantity"></span>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Product Category</label>
        <select asp-for="CategoryId" asp-items="Model.Category">
            <option value="">
                Select a category
            </option>
        </select>
        <span style="color:red" asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ColorId" class="form-label">Product Color</label>
        <select asp-for="ColorId" asp-items="Model.Color">
            <option value="">
                Select a color
            </option>
        </select>
        <span style="color:red" asp-validation-for="ColorId"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BrandId" class="form-label">Product Brand</label>
        <select asp-for="BrandId" asp-items="Model.Brand">
            <option value="">
                Select a brand
            </option>
        </select>
        <span style="color:red" asp-validation-for="BrandId"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Product Photo</label>
        <input asp-for="Image" class="form-controll" multiple="multiple" />
        <span style="color:red" asp-validation-for="Image"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Product</button>

</form>