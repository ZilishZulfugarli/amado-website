@model MiniLayihe.Models.ProductIndexVM;

@using MiniLayihe.Models;
@{
    Layout = null;
}

@foreach (var item in Model.Products)
{
    <div class="card" style="width: 18rem; border: 1px solid black">
        <div class="card-body">
            <img src="~/img/@item.ProductImages." />
            <h5 class="card-title">@item.Name</h5>
            <p>@item.Category.Name</p>
            <a class="btn btn-warning" asp-action="Delete" asp-controller="AdminProduct" asp-route-id="@item.Id">Delete</a>
            <a class="btn btn-danger" asp-action="Update" asp-controller="AdminProduct" asp-route-id="@item.Id">Update</a>
        </div>
    </div>
}