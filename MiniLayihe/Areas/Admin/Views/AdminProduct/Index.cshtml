@model MiniLayihe.Models.ProductIndexVM;

@using MiniLayihe.Entities;
@{
    Layout = null;
}
<a asp-action="Index" asp-controller="AdminHome">Go Back</a>
<a asp-action="Add" asp-controller="AdminProduct" class="btn primary-btn">Add Product</a>
@foreach (var item in Model.Products)
{
    @foreach (var img in item.ProductImages)
        {
        <div class="card" style="width: 18rem; border: 1px solid black; border-radius: 20px;">
            <img src="~/img/@img.ImagePath" class="card-img-top" alt="Product Image" style="width:290px;height:150px; border-radius: 20px;">
            <div class="card-body">
                <h5 class="card-title">Name: @item.Name</h5>
                <p class="card-text">Description: @item.Description</p>
                <p>Color: @item.Color.Name</p>
                <p>Price: @item.Price</p>
                <p>Brand: @item.Brand.Name</p>
                <p>Category: @item.Category.Name</p>
                <p>Quantity: @item.Quantity</p>
                <a class="btn btn-warning" asp-action="Delete" asp-controller="AdminProduct" asp-route-id="@item.Id">Delete</a>
                <a class="btn btn-danger" asp-action="Update" asp-controller="AdminProduct" asp-route-id="@item.Id">Update</a>
            </div>
        </div>

   
            }
        }