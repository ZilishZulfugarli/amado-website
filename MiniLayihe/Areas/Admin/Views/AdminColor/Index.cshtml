@model MiniLayihe.Models.ColorIndexVM;
@{
    Layout = null;
}
<a asp-action="Add" asp-controller="AdminColor" class="btn primary-btn">Add Color</a>
@foreach (var item in Model.Colors)
{
    <div class="card" style="width: 18rem; border: 1px solid black">
        <div class="card-body">
            <div style="width: 30px; height: 30px; border-radius:50%; background-color: @item.Code"></div>
            <h5 class="card-title">@item.Name</h5>
            <a class="btn btn-warning" asp-action="Delete" asp-controller="AdminColor" asp-route-id="@item.Id">Delete</a>
            <a class="btn btn-danger" asp-action="Update" asp-route-id="@item.Id">Update</a>
        </div> 
    </div>
}
